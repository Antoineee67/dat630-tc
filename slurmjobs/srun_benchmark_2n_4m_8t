#!/bin/bash
#SBATCH --job-name="treecode benchmark"
#SBATCH -A C3SE2024-2-18 -p vera #Check if correct project
#SBATCH -t 0-00:05:00 #Max runtime of 20 min
#SBATCH --output=output_treecode_benchmark%j.txt
#SBATCH --nodes=2 # Number of nodes
#SBATCH --ntasks-per-node=4 # MPI tasks (ranks) per node
#SBATCH --cpus-per-task=8 # OpenMP threads per MPI rank
#SBATCH -C ZEN4

export OMP_NUM_THREADS=8 # Set number of OpenMP threads per MPI rank

module load OpenMPI/4.1.6-GCC-13.2.0

srun ./treecode nbody=1000000 mpi_depth=8 tstop=1 omp_threshold=999 benchmark=treecodeBenchmark.txt
